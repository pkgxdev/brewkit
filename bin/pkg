#!/usr/bin/env -S pkgx bash
# shellcheck shell=bash

set -e

if test -z "$1"; then
  echo available commands:
  echo
  d="$(cd "$(dirname "$0")" && pwd)"
  find "$d" -type f | sed -ne 's/^.*\/pkg-/pkg /p'
  exit 1
fi

arg="$1"
shift

if test "$arg" = "-v" || test "$arg" = "--version"; then
  d="$(cd "$(dirname "$0")"/.. && pwd)"
  if echo "$d" | grep -q "${PKGX_DIR:-$HOME/.pkgx}/tea.xyz/brewkit"; then
    V="${d#"${PKGX_DIR:-$HOME/.pkgx}"/tea.xyz/brewkit/}"
  else
    V="$(git describe --tags --abbrev=0 --match "v[0-9]*.[0-9]*.[0-9]*")-dev"
  fi
  echo "brewkit: $V"
  exit 0
fi

if test "$arg" = "-L"; then
  export PKGX_DOCKER=1

  if test -n "$1"; then
    arg="$1"
    shift
  else
    arg="docker"
  fi
fi

d="$(cd "$(dirname "$0")" && pwd)"
if test -x "$d"/pkg-"$arg"; then
  exec "$d"/pkg-"$arg" "$@"
elif test "$(find "$d" -name "pkg-$arg*" | wc -l)" -eq 1; then
  exec "$d"/pkg-"$arg"* "$@"
else
  echo "brewkit: error: unknown or ambiguous command '$arg'" >&2
  exit 1
fi
