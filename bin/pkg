#!/bin/sh

set -e

arg="$1"
shift

if test "$arg" = "-v" || test "$arg" = "--version"; then
  d="$(cd "$(dirname "$0")"/.. && pwd)"
  if echo "$d" | grep -q "$(tea --prefix)/tea.xyz/brewkit"; then
    V="${d#"$(tea --prefix)"/tea.xyz/brewkit/}"
  else
    V="$(git describe --tags --abbrev=0 --match "v[0-9]*.[0-9]*.[0-9]*")-dev"
  fi
  echo "tea.xyz/brewkit: $V"
  exit 0
fi

if test "$arg" = "-L"; then
  export TEA_DOCKER=1

  if test -n "$1"; then
    arg="$1"
    shift
  else
    arg="docker"
  fi
fi

if test -n "$arg"; then
  d="$(cd "$(dirname "$0")" && pwd)"
  exec "$d"/pkg-"$arg" "$@"
else
  echo "tea.xyz/brewkit: error: invalid usage" >&2
  exit 1
fi
